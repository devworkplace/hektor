@{
    ViewBag.Title = "Usuario";
}
<div class="row">
    <div class="col-lg-12">
        <div id="dvTabelaPrincipal" class="box">
            <div class="box-body">
                <div style="margin: 0 0 1em 0;overflow: hidden; text-align:left;">
                    <button id="btnNovo" class="btn btn-sm btn-success" style="margin-right:5px;" type="button">
                        <i class="glyphicon glyphicon-plus visible-xs"></i>
                        <label class="hidden-xs" style="margin:0px;">Novo item</label>
                    </button>
                    <button id="btnExcluirItens" class="btn btn-sm btn-danger" type="button">
                        <i class="glyphicon glyphicon-remove visible-xs"></i>
                        <label class="hidden-xs" style="margin:0px;">Excluir item(ns)</label>
                    </button>
                </div>
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="tabelaPrincipal">
                        <thead>
                            <tr>
                                <th>CPF</th>
                                <th>Nome</th>
                                <th>E-mail</th>
                                <th>Tipo</th>
                                <th>Responsável</th>
                                <th>Admissão</th>
                                <th style="text-align: center;">A&ccedil;&otilde;es</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <div id="dvFormCadastro" class="box" style="display:none;">
            <div class="box-body">
                <form id="formCadastro" action="#">
                    <div class="row">
                        <div class="col-lg-6 form-group campoCadastro">
                            <label>Login:</label>
                            <input id="login" name="login" class="form-control" placeholder="Informe o Login" maxlength="50" />
                        </div>
                        <div class="col-lg-6 form-group campoCadastro">
                            <label>Senha:</label>
                            <input id="senha" name="senha" class="form-control" placeholder="Informe a Senha" maxlength="50" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 form-group campoCadastro">
                            <label>CPF:</label>
                            <input id="cpf" name="cpf" class="form-control" placeholder="Informe o CPF" maxlength="14" />
                        </div>
                        <div class="col-lg-6 form-group campoLeitura">
                            <label>CPF:</label>
                            <p id="cpfLeitura"></p>
                        </div>
                        <div class="col-lg-6 form-group campoCadastro">
                            <label>Nome:</label>
                            <input id="nome" name="nome" class="form-control" placeholder="Informe o Nome" maxlength="50" />
                        </div>
                        <div class="col-lg-6 form-group campoLeitura">
                            <label>Nome:</label>
                            <p id="nomeLeitura"></p>
                        </div>
                        <div class="col-lg-6 form-group campoCadastro">
                            <label>E-mail:</label>
                            <input id="email" name="email" class="form-control" placeholder="Informe o E-mail" maxlength="50" />
                        </div>
                        <div class="col-lg-6 form-group campoLeitura">
                            <label>E-mail:</label>
                            <p id="emailLeitura"></p>
                        </div>
                        <div class="col-lg-6 form-group campoCadastro">
                            <label>Tipo:</label>
                            <select id="tipo" name="tipo" class="form-control">
                                <option value="">Informe o Tipo</option>
                                <option value="B">Back Office</option>
                                <option value="O">Operador</option>
                                <option value="S">Supervisor</option>
                            </select>
                        </div>
                        <div class="col-lg-6 form-group campoLeitura">
                            <label>Tipo:</label>
                            <p id="tipoLeitura"></p>
                        </div>
                        <div class="col-lg-6 form-group campoCadastro">
                            <label>Responsável:</label>
                            <select id="Usuario" name="Usuario" class="form-control"></select>
                        </div>
                        <div class="col-lg-6 form-group campoLeitura">
                            <label>Responsável:</label>
                            <p id="UsuarioLeitura"></p>
                        </div>
                        <div class="col-lg-6 form-group campoCadastro">
                            <label>Admissão:</label>
                            <input id="dataAdmissao" name="dataAdmissao" class="form-control data-filtro" readonly="readonly" placeholder="Informe o dataAdmissao" maxlength="10" />
                        </div>
                        <div class="col-lg-6 form-group campoLeitura">
                            <label>Admissão:</label>
                            <p id="dataAdmissaoLeitura"></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 form-group" style="text-align:right;">
                            <button id="btnSalvar" class="btn btn-sm btn-success" style="margin-right:5px;" type="button">
                                <i class="glyphicon glyphicon-floppy-disk visible-xs"></i>
                                <label class="hidden-xs" style="margin:0px;">Salvar</label>
                            </button>
                            <button id="btnSalvarContinuar" class="btn btn-sm btn-success" style="margin-right:5px;" type="button">
                                <i class="glyphicon glyphicon-floppy-disk visible-xs"></i>
                                <label class="hidden-xs" style="margin:0px;">Salvar e Continuar</label>
                            </button>
                            <button id="btnCancelar" class="btn btn-sm btn-danger" type="button">
                                <i class="glyphicon glyphicon-remove visible-xs"></i>
                                <label class="hidden-xs" style="margin:0px;">Cancelar</label>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section script{
    <script src="@Url.Content("~/Scripts/custom/usuario.js")"></script>
}